<%- layout('/boilerplate/boilerplate') %>
    <span>
        <h1>User Profile</h1>
    </span>
    <div class="orders-body-container">
        <h2>My Orders</h2>
        <div class="orders-main-container">
            <% for(order of orders){ %>
                <ul>
                    <li>
                        <div class="list-container">
                            <% var i=1 %> 
                            <%for(ord of order.items){ %>
                                <div class="order-title">
                                    <%=`${i++}. ${ord.item.title}` %>
                                </div>

                                <% } %>
                                    <div class="order-totalprice">
                                        Total Price:&#8377; <%=order.cart.totalPrice +150%>
                                    </div>
                        </div>
                    </li>

                </ul>
                <% } %>
        </div>
    </div>


