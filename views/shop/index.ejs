<%- layout('/boilerplate/boilerplate') %>
    <div class="main-container">

        <% for (let product of products){ %>
            <div class="card-container">

                <div class="product-image">
                    <img src="<%= product.image %>" alt="">
                </div>

                <div class="product-title">
                    <a href="/index/<%= product._id%>">
                        <%= product.title %>
                    </a>
                </div>

                <div class="product-price">
                    &#x20B9; <%= product.price %>
                </div>

                <!-- <a href="/add-to-cart/" class="index-add-to-cart">Add To Cart</a> -->

                
                <a href="/index/<%=product._id %>/add-to-cart" class="index-add-to-cart">Add To Cart</a>
                <!-- <a href="<%=product._id %>/add-to-cart"><button class="show-card-button">Add To Cart </button></a> -->
            </div>
            <% } %>

    </div>