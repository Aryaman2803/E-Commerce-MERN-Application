<%- layout('/boilerplate/boilerplate') %>

    <div class="checkout-main-container">
        <div class="checkout-body-container">
            <form action="#" method="POST">
                <strong>Checkout</strong>
                <b>Your Total: &#x20B9;</b>
                <%=totalPrice+150 %>
                    <div class="checkout-input">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name">
                    </div>
                    <div class="checkout-input">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address">
                    </div>
                    <div class="checkout-input">
                        <label for="cardholder-name">Card Holder Name</label>
                        <input type="text" name="cardholder-name" id="cardholder-name">
                    </div>
                    <div class="checkout-input">
                        <label for="creditcard-number">Credit Card Number</label>
                        <input type="text" name="creditcard-number" id="creditcard-number">
                    </div>
                    <div class="checkout-input">
                        <label for="card-expiration-month">Expiration Month</label>
                        <input type="text" name="card-expiration-month" id="card-expiration-month">
                    </div>
                    <div class="checkout-input">
                        <label for="card-expiration-year">Expiration Year</label>
                        <input type="text" name="card-expiration-year" id="card-expiration-year">
                    </div>
                    <div class="checkout-input">
                        <label for="card-cvc">CVC</label>
                        <input type="text" name="card-cvc" id="card-cvc">
                    </div>
                    <button class="checkout-buy">Buy</button>
            </form>
        </div>
    </div>